        <Label Content="Error maximo:" HorizontalAlignment="Left" Margin="36,149,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtRata" HorizontalAlignment="Left" Height="23" Margin="154,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtErrorMax" HorizontalAlignment="Left" Height="23" Margin="154,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

