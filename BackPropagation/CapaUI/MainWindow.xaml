        <Label Content="Archivo:" HorizontalAlignment="Left" Margin="36,187,0,0" VerticalAlignment="Top"/>
        <Label Content="patron:" HorizontalAlignment="Left" Margin="40,293,0,0" VerticalAlignment="Top"/>
